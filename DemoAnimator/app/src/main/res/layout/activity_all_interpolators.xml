<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.zhijianz.demoanimator.AttributeAnimActivity">

    <LinearLayout
        android:id="@+id/ll_animation_area"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#b8ffd7"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:id="@+id/v_actor"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:background="#ff0000" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#717171" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_linear_interpolator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LinearInterpolator" />

            <Button
                android:id="@+id/btn_accelerate_decelerate_interpolator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AccelerateDecelerateInterpolator" />

            <Button
                android:id="@+id/btn_accelerate_interpolator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AccelerateInterpolator" />

            <Button
                android:id="@+id/btn_decelerate_interpolator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DecelerateInterpolator" />

            <Button
                android:id="@+id/btn_anticipate_interpolator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AnticipateInterpolator" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_overshoot_interpolator"
                android:text="OvershootInterpolator"/>

            <Button
                android:id="@+id/btn_anticipate_overshoot_interpolator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AnticipateOvershootInterpolator" />

            <Button
                android:id="@+id/btn_bounce_interpolator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BounceInterpolator" />

            <Button
                android:id="@+id/btn_cycle_interpolator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CycleInterpolator" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_custom_cycle_interpolator"
                android:text="Custom Cycle Interpolator"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_custom_interpolator"
                android:text="CustomInterpolator"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
