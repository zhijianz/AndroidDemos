<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.zhijianz.demoanimator.AttributeAnimActivity">

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/ll_animation_area"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#b8ffd7">

        <View
            android:id="@+id/v_actor"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#ff0000" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#717171" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_change_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="START CHANGE COLOR" />

            <Button
                android:id="@+id/btn_change_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="START CHANGE LOCATION" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LAYOUT TRANSITION"
                android:id="@+id/btn_test"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RUBBER BAND ANIMATOR"
                android:id="@+id/btn_rubber_band"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SHAKE ANIMATION"
                android:id="@+id/btn_shake_animator"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="VALUE ANIMATOR"
                android:id="@+id/btn_value_animator"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
